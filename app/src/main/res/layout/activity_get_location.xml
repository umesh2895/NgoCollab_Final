<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/locationask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_logo"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Tell us where you are located ! "
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/locationask"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_icon"
            android:src="@drawable/ic_location_on_white_24dp" />

        <TextView
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:id="@+id/locationgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_icon"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Share your location so that we can find NGOs near you ! "
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="40dp"/>

        <!--<TextView-->
            <!--android:paddingRight="15dp"-->
            <!--android:paddingLeft="15dp"-->
            <!--android:id="@+id/locationgot"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/welcome_msg1"-->
            <!--android:layout_margin="40dp"-->
            <!--android:gravity="center"-->
            <!--android:textColor="@color/colorWhite"-->
            <!--android:textSize="18sp"-->
            <!--android:textStyle="bold" />-->

        <Button
            android:id="@+id/buttonGetLocation"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@id/locationgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:text="Locate Me"
            android:textSize="18sp"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/buttonGetLocationPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/colorPrimary"
            android:text="PREV"
            android:textColor="@color/colorWhite" />

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/buttonGetLocationDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"
            android:text="Done"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
</RelativeLayout>
