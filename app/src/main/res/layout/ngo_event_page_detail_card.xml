<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/detail_name_of_event_ngo_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details Name of The Event"
            android:textColor="@color/colorPrimaryText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:background="#fafafa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <ImageView
                android:id="@+id/icon_time_specific_ngo_event"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/ic_action_schedule" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_day_event_specific_ngo_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="DateandDay"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    android:id="@+id/time_event_specific_ngo_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Time"
                    android:textColor="@color/colorPrimaryText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_place_specific_ngo_event"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_location" />

            <TextView
                android:id="@+id/address_event_specific_ngo_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:text="Place Name"
                android:textColor="@color/colorPrimaryText" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
